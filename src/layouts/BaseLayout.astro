---
import '../styles/index.scss'
import Logo from '../components/Logo.astro'
import { Icon } from 'astro-icon/components'
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="generator" content={Astro.generator} />
        <title>RikiTraki</title>

        <!-- Stable viewport height for iPhone Safari -->
		<script>
			function updateAppHeight() {
				const navbarHeight = parseInt(getComputedStyle(document.documentElement).getPropertyValue('--navbar-height'));
				const height = window.visualViewport
					? window.visualViewport.height - navbarHeight
					: window.innerHeight - navbarHeight;

				document.documentElement.style.setProperty('--app-height', `${height}px`);
			}

			// iPhone Safari triggers viewport changes here:
			window.visualViewport?.addEventListener('resize', updateAppHeight);
			window.visualViewport?.addEventListener('scroll', updateAppHeight);

			window.addEventListener('orientationchange', updateAppHeight);
			window.addEventListener('resize', updateAppHeight);

			updateAppHeight();
		</script>

    </head>

    <body class="has-navbar-fixed-top">

        <nav class="navbar is-fixed-top is-dark" role="navigation" aria-label="main navigation" x-data="{ open: false }">
            <div class="navbar-brand">
                <a class="navbar-item" style="padding: 0px;">
                    <Logo />
                </a>

                <a role="button" class="navbar-burger has-text-white" :class="{ 'is-active': open }" @click="open = !open" aria-label="menu" aria-expanded="false">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div class="navbar-menu" :class="{ 'is-active': open }">
                <div class="navbar-start"></div>
                <div class="navbar-end">
                    <a class="navbar-item" style="max-height: 62px;">
                        <Icon name="fa7-solid:user" class="is-size-4"/>
                    </a>
                    <a class="navbar-item" style="max-height: 62px;">
                        <Icon name="fa7-solid:circle-info" class="is-size-4"/>
                    </a>
                </div>
            </div>
        </nav>

        <div class="app-root">
            <slot />
        </div>

    </body>
</html>

<style>
    /* App root fills the visible viewport (minus navbar) */
    .app-root {
        height: var(--app-height);
        display: flex;
        flex-direction: column;
    }

    .navbar-item svg,
    .navbar-brand svg {
        max-height: 4rem;
    }
</style>
