---
import { Icon } from 'astro-icon/components'
---

<div class="bottom-panel isopen">
	<button class="bottom-panel-close-button" title="Close info panel">
		<Icon name="fa7-solid:xmark" class="icon" />
	</button>

	<div class="bottom-panel-content">
		<div class="bottom-panel-title is-size-6 has-text-weight-bold has-text-centered has-background-light py-2">Title 6</div>

		<div class="card-container">
			<div class="card-row has-text-centered">
				<div class="motd-card">Cell 1</div>
				<div class="motd-card">Cell 2</div>
				<div class="motd-card">Cell 3</div>
				<div class="motd-card">Cell 4</div>
				<div class="motd-card">Cell 5</div>
			</div>
		</div>
	</div>


</div>
<style>

/* ----------------------------------------------------------
    BOTTOM PANEL (shell)
---------------------------------------------------------- */

.bottom-panel {
    background: #f5f5f5;
    overflow: hidden;          /* panel itself must NEVER scroll */
    height: 10rem;
    max-height: 10rem;
    transition: max-height .3s ease;
    position: relative;        /* anchor for close button */
    z-index: var(--z-panels);
}

.bottom-panel:not(.isopen) {
    max-height: 0;
}

/* ----------------------------------------------------------
    CONTENT AREA (flex column, no scroll on desktop)
---------------------------------------------------------- */

.bottom-panel-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden; 
}

.bottom-panel-content > .bottom-panel-title {
    flex: 0 0 auto;
}

/* ----------------------------------------------------------
    CARD STRIP (fills remaining height, scrolls horizontally)
---------------------------------------------------------- */

.card-container {
    flex: 1 1 auto;
    min-height: 0;


    overflow-x: auto;
    overflow-y: hidden;


    padding-left: var(--side-panel-width);
    padding-right: var(--ui-space);
    box-sizing: border-box;

    scroll-snap-type: x mandatory;
    scroll-padding-left: 1rem;


    display: flex;
    align-items: stretch;
}

/* inner row: content-sized, centered */
.card-row {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 1rem;

    width: max-content;
    margin: 0 auto; 
}

/* cards */
.motd-card {
    flex: 0 0 auto;
    min-width: 12rem;
    height: 100%;
    scroll-snap-align: start;
    display: flex;
    flex-direction: column;
}



/* ----------------------------------------------------------
    MOBILE (vertical stack + vertical scroll)
---------------------------------------------------------- */

@media (max-width: 768px) {
    .bottom-panel-content {
        overflow-y: auto;
        overflow-x: hidden;
    }

    .card-container {
        display: block;
        overflow-x: hidden;
        overflow-y: visible;
        height: auto;
        scroll-snap-type: none;

        padding-left: 0; 
        padding-right: 0;
    }

    .card-row {
        display: block;
        width: auto; 
        margin: 0;
    }

    .motd-card {
        height: auto;
        min-width: auto;
        margin-bottom: 1rem;
    }
}


</style>