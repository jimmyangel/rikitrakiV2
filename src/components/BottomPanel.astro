---
import { Icon } from 'astro-icon/components'
---

<div class="bottom-panel isopen">
	<button class="bottom-panel-close-button" title="Close info panel">
		<Icon name="fa7-solid:xmark" class="icon" />
	</button>

	<div class="bottom-panel-content">
		<div class="is-size-6 has-text-weight-bold has-text-centered has-background-light py-2">Title 6</div>

		<div class="card-container">
			<div class="motd-card">Cell 1</div>
			<div class="motd-card">Cell 2</div>
			<div class="motd-card">Cell 3</div>
			<div class="motd-card">Cell 4</div>
			<div class="motd-card">Cell 5</div>
		</div>
	</div>


</div>
<style>

/* ----------------------------------------------------------
    BOTTOM PANEL (shell)
---------------------------------------------------------- */

.bottom-panel {
    background: #f5f5f5;
    overflow: hidden;          /* panel itself must NEVER scroll */
    height: 10rem;
    max-height: 10rem;
    transition: max-height .3s ease;
    position: relative;        /* anchor for close button */
    z-index: var(--z-panels);
}

.bottom-panel:not(.isopen) {
    max-height: 0;
}

/* ----------------------------------------------------------
    CONTENT AREA (flex column, no scroll on desktop)
---------------------------------------------------------- */

.bottom-panel-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;          /* desktop: no vertical scroll */
}

/* Title row: natural height */
.bottom-panel-content > .is-size-6 {
    flex: 0 0 auto;
}

/* ----------------------------------------------------------
    CARD STRIP (fills remaining height, scrolls horizontally)
---------------------------------------------------------- */

.card-container {
    flex: 1 1 auto;
    min-height: 0;
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    overflow-y: hidden;
    gap: 1rem;
    scroll-snap-type: x mandatory;
    scroll-padding-left: 1rem;

    padding-left: var(--side-panel-width);
    padding-right: var(--ui-space);
    box-sizing: border-box;

    justify-content: flex-start;  /* no horizontal centering */
    align-items: stretch;
}

.motd-card {
    flex: 0 0 auto;
    min-width: 12rem;
    height: 100%;
    scroll-snap-align: start;
    display: flex;
    flex-direction: column;
}

/* ----------------------------------------------------------
    MOBILE (vertical stack + vertical scroll)
---------------------------------------------------------- */

@media (max-width: 768px) {
    .bottom-panel-content {
        overflow-y: auto;      /* mobile: vertical scroll */
        overflow-x: hidden;
    }

    .card-container {
        display: block;
        overflow-x: hidden;
        overflow-y: visible;
        height: auto;
        scroll-snap-type: none;
    }

    .motd-card {
        height: auto;
        min-width: auto;
        margin-bottom: 1rem;
    }
}

</style>