---
import { Icon } from 'astro-icon/components'
---

<div class="bottom-panel isopen">
	<button class="bottom-panel-close-button" title="Close info panel">
		<Icon name="fa7-solid:xmark" class="icon" />
	</button>

	<div x-data x-init="$store.tracks.loadMotd()"class="bottom-panel-content">
		<div class="bottom-panel-title is-size-6 has-text-weight-bold has-background-light p-2">
			What's new...
		</div>
		<div class="card-container">
			<div class="card-row">
				<template x-for="item in $store.tracks.motdTracks" :key="item.trackId">
					<div class="motd-card has-text-centered">
						<img class="motdThumbs" :src="$store.tracks.thumbnailUrl(item.trackId)">
						<div class="is-size-7 p-2" x-text="item.title"></div>
					</div>
				</template>
			</div>
		</div>
	</div>
</div>
<style>

/* ----------------------------------------------------------
    BOTTOM PANEL (shell)
---------------------------------------------------------- */

.bottom-panel {
    background: #f5f5f5;
    overflow: hidden;          /* panel itself must NEVER scroll */
    height: 14rem;
    max-height: 14rem;
    transition: max-height .3s ease;
    position: relative;        /* anchor for close button */
    z-index: var(--z-panels);
}

.bottom-panel:not(.isopen) {
    max-height: 0;
}

/* ----------------------------------------------------------
    CONTENT AREA (flex column, no scroll on desktop)
---------------------------------------------------------- */

.bottom-panel-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden; 
}

.bottom-panel-content > .bottom-panel-title {
    flex: 0 0 auto;
}

/* ----------------------------------------------------------
    CARD STRIP (fills remaining height, scrolls horizontally)
---------------------------------------------------------- */

.card-container {
    flex: 1 1 auto;
    min-height: 0;


    overflow-x: auto;
    overflow-y: hidden;


    padding-left: var(--side-panel-width);
    padding-right: var(--ui-space);
    box-sizing: border-box;

    scroll-snap-type: x mandatory;
    scroll-padding-left: 1rem;


    display: flex;
    align-items: stretch;
}

/* inner row: content-sized, centered */
.card-row {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    /* gap: 1rem; */

    width: max-content;
    margin: 0 auto; 
}

/* cards */
.motd-card {
    flex: 0 0 auto;
    width: 12rem;
    height: 100%;
    scroll-snap-align: start;
    display: flex;
    flex-direction: column;
	align-items: center;
}

.motdThumbs {
    border: 2px solid #fff;
    width: 10rem;
	height: 7.5rem;
}



/* ----------------------------------------------------------
    MOBILE (vertical stack + vertical scroll)
---------------------------------------------------------- */

@media (max-width: 768px) {
    .bottom-panel-content {
        overflow-y: auto;
        overflow-x: hidden;
    }

    .card-container {
        display: block;
        overflow-x: hidden;
        overflow-y: visible;
        height: auto;
        scroll-snap-type: none;

        padding-left: 0;
        padding-right: 0;
    }

    .card-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;  /* center items on each row */
        gap: 1rem;
        width: 100%;
        margin: 0;
    }

    .motd-card {
        height: auto;
        min-width: 0;
        margin-bottom: 0;

        display: flex;
        flex-direction: column;
        align-items: center;

        flex: 0 0 calc(33.333% - 1rem);
        max-width: calc(33.333% - 1rem);
    }

    @media (max-width: 600px) {
        .motd-card {
            flex: 0 0 calc(50% - 1rem);
            max-width: calc(50% - 1rem);
        }
    }

    @media (max-width: 400px) {
        .motd-card {
            flex: 0 0 100%;
            max-width: 100%;
        }
    }
}





</style>